<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Use Tomcat's catalina.base logs directory when available; fall back to ./logs locally -->
    <property name="LOG_DIR" value="${catalina.base:-.}/logs"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%boldYellow([%d{HH:mm:ss.SSS}]) %boldCyan(%-15.-15thread) %boldGreen(%-15.-15logger{0}) %highlight(%-6level) %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/bwp-application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Daily rollover with timestamp -->
            <fileNamePattern>${LOG_DIR}/bwp-application-%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Single root logger configuration -->
    <root level="ALL">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>